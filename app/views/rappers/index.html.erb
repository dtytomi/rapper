<h1>Rappers Chart</h1>

<table>
  <thead>
    <tr>
      <th>Song</th>
      <th>Artist</th>
      <th>Album</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rappers.each do |rapper| %>
      <tr>
        <td width="100"><%= rapper.song %></td>
        <td width="100"><%= rapper.artist %></td>
        <td width="100"><%= rapper.album %></td>
        <td width="100"><%= rapper.description %></td>
        <td width="100"><%= rapper.picture %></td>
        <td width="100"><%= link_to 'Show', rapper %></td>
        <td width="100"><%= link_to 'Edit', edit_rapper_path(rapper) %></td>
        <!-- <td width="100"><%= link_to 'Destroy', rapper, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

